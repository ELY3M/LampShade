<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuxhausen.huemore"
    android:versionCode="32"
    android:versionName="2.2.6" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/huemore"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         
        <activity
            android:name="com.kuxhausen.huemore.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" android:theme="@style/Theme.Sherlock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name="com.kuxhausen.huemore.SecondActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" android:theme="@style/Theme.Sherlock" android:noHistory="true">
        </activity>
        <provider
            android:name=".persistence.HueMoreProvider"
            android:authorities="com.kuxhausen.provider.huemore.database"
            android:exported="true" >
        </provider>

        <!-- Listen for the "edit" action -->
          <activity
                android:name="com.kuxhausen.huemore.automation.EditActivity"
                android:label="@string/app_name"
                android:icon="@drawable/preview" android:noHistory="true" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
                <intent-filter>
                    <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
                </intent-filter>
          </activity>
          <!-- Listen for the "fire" action-->
          <receiver android:name="com.kuxhausen.huemore.automation.FireReceiver" >
              <intent-filter>
                  <action android:name="com.twofortyfouram.locale.intent.action.FIRE_SETTING" />
              </intent-filter>
          </receiver>
        <activity
            android:name=".nfc.NfcWriterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".nfc.NfcReaderActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="www.kuxhausen.com"
                    android:pathPrefix="/HueMore/nfc"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <receiver android:name=".timing.AlarmReciever" >
        </receiver>

        <activity
            android:name=".timing.AlarmListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" android:theme="@style/Theme.Sherlock">
        </activity>

        <receiver android:name=".timing.BootSetter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".widget.AlarmWidgetProvider" android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    			<action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
    			<action android:name="android.appwidget.action.APPWIDGET_DELETED" />
    			<action android:name="android.appwidget.action.APPWIDGET_DISABLED" /> 
            </intent-filter>
            <!-- This specifies the widget provider info -->
            <meta-data android:name="android.appwidget.provider"
                    android:resource="@xml/widgetinfo" />
        </receiver>

        <service android:name=".widget.AlarmWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />
                
    </application>

</manifest>