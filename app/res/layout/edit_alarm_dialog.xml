<?xml version="1.0" encoding="utf-8"?>
<!-- This page has its main content nested in a scroll view, so future content can be added without worrying about it always fitting on screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TimePicker
                android:id="@+id/alarmTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#33B5E5" />
			<LinearLayout
       	 	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/groupTextView"
	                style="@style/AppTheme"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="8dp"
	                android:layout_gravity="center_vertical"
	                android:text="@string/group_intro" />
	
	            <Spinner
	                android:id="@+id/groupSpinner"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="8dp" />
			</LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#33B5E5" />
			<LinearLayout
       	 	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/moodsPromptTextView"
	                style="@style/AppTheme"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="8dp"
	                android:layout_gravity="center_vertical"
	                android:text="@string/mood_intro" />
	
	            <Spinner
	                android:id="@+id/moodSpinner"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="8dp" />
			</LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#33B5E5" />

            <TextView
                android:id="@+id/brightnessDescripterTextView"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:text="@string/brightness" />

            <SeekBar
                android:id="@+id/brightnessBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:paddingBottom="8dp"
                android:progress="127" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#33B5E5" />

            <LinearLayout
       	 	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/transitionPromptTextView"
	                style="@style/AppTheme"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="8dp"
	                android:layout_gravity="center_vertical"
	                android:text="@string/transition_intro" />
	
	            <Spinner
	                android:id="@+id/transitionSpinner"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/accept" />
    </LinearLayout>

</LinearLayout>