<?xml version="1.0" encoding="utf-8"?>
<!-- This page has its main content nested in a scroll view, so future content can be added without worrying about it always fitting on screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TimePicker
                android:id="@+id/alarmTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
            
            <include layout="@layout/horizontal_divider_line"/>            
                
			<LinearLayout
       	 	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/groupTextView"
	                style="@style/AppTheme"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:padding="8dp"
	                android:layout_gravity="center_vertical"
	                android:text="@string/group_intro"
	                android:layout_weight="1" />
	
	            <Spinner
	                android:id="@+id/groupSpinner"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:padding="8dp" 
	                android:layout_weight="2"/>
			</LinearLayout>
            
			<LinearLayout
       	 	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/moodsPromptTextView"
	                style="@style/AppTheme"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:padding="8dp"
	                android:layout_gravity="center_vertical"
	                android:text="@string/mood_intro" 
	                android:layout_weight="1"/>
	
	            <Spinner
	                android:id="@+id/moodSpinner"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:padding="8dp" 
	                android:layout_weight="2"/>
			</LinearLayout>
            

            <TextView
                android:id="@+id/brightnessDescripterTextView"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:text="@string/brightness" />

            <SeekBar
                android:id="@+id/brightnessBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:paddingBottom="8dp"
                android:progress="127" />
            <LinearLayout
       	 	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
            	<Button
	                android:id="@+id/repeatButton"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="@string/alarm_repeat"
	                android:layout_weight="1" />

            	<TextView
            	    android:id="@+id/repeatVisualization"
            	    style="@style/AppTheme"
            	    android:layout_width="0dp"
            	    android:layout_height="wrap_content"
            	    android:layout_gravity="center_vertical"
            	    android:layout_weight="2"
            	    android:padding="8dp"
            	    android:text="@string/cap_short_none"
            	    android:textSize="16sp" />
	
            </LinearLayout> 
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/horizontal_divider_line"/>
    
	<include layout="@layout/confirmation_bar"/>

</LinearLayout>