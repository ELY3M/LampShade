<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.kuxhausen.huemore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/advancedLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="8dp" >

         <EditText
		    android:id="@+id/editText1"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:hint="@string/hint_mood_name"
		    android:imeOptions="actionDone"
		    android:inputType="text"
		    android:layout_weight="1" >
		</EditText>
         <CheckBox
             android:id="@+id/checkBox1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/infinite_loop" />

     </LinearLayout>
    
	<View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#33B5E5" />
    
	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" >
	
	    <HorizontalScrollView
	        android:id="@+id/horizontalScrollView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
				<android.support.v7.widget.GridLayout
				    android:id="@+id/advancedGridLayout"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:minHeight="144dp"
				    android:minWidth="144dp"
				    app:columnCount="3"
				    app:rowCount="1" >
	
				</android.support.v7.widget.GridLayout>
				    
				<Button
				    android:id="@+id/addTimeslotButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignLeft="@id/advancedGridLayout"
				    android:layout_alignRight="@id/advancedGridLayout"
				    android:layout_below="@id/advancedGridLayout"
				    android:text="@string/add_timeslot" />

				<Button
				    android:id="@+id/addChannelButton"
				    android:layout_width="48dp"
				    android:layout_height="wrap_content"
				    android:layout_alignBottom="@id/advancedGridLayout"
				    android:layout_alignTop="@id/advancedGridLayout"
				    android:layout_toRightOf="@id/advancedGridLayout"
				    android:text="@string/add_channel" />	
        	</RelativeLayout>
    	</HorizontalScrollView>
	</ScrollView>
	<View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#33B5E5" />
	
    <include layout="@layout/confirmation_bar"/>
</LinearLayout>